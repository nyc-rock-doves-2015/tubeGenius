<%= form_for(@video) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>

  <%= f.label :category %>
  <%= f.text_field :category, class: 'form-control' %>

  <%= f.label :url %>
  <%= f.text_field :url, class: 'form-control' %>

  <%= f.submit "Save Changes" %>
<% end %>