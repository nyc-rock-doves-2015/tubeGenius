<% if flash[:notice] %>
  <div class="flash">
    <%= get_flash %>
  </div>
<% end %>

<div id="signin">
  <%= form_for @user, url: session_path, html: { class: "form-signin" } do |f| %>
    <h2>Sign In</h2>
    <%= f.label :name, "Username: " %>
    <%= f.text_field :name %>
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password %>
    <%= f.submit 'Sign In' %>
  <% end %>

  <div class="g-signin2" data-onsuccess="onSignIn"></div>
  
</div>