<% if flash[:notice] %>
  <div class="flash">
    <%= get_flash %>
  </div>
<% end %>

<div id="signin">
  <%= form_for @user, url: session_path, html: { class: "form-signin" } do |f| %>
    <h2>Sign In</h2>
    <%= f.label :name, "Username: " %>
    <%= f.text_field :name %>
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password %>
    <%= f.submit 'Sign In' %>
  <% end %>

  <div class='icon'>
    <%= link_to image_tag("google_button.jpeg", border: 0), auth_google_oauth2_path %>
  </div>

  <div class='icon'>
    <%= link_to image_tag("Facebook-icon.png", border: 0), auth_facebook_path %>
  </div>

</div>
  