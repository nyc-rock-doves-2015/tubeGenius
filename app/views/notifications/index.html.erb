<div class="row" style="height 10%">
  <div class="row">
    <div class="large-2 columns small-3"></div>
    <div class="large-10 columns">
      <h1 style="font-family: Century">Notifications</h1>
      <% if !@notifications.blank? %>
        <ul>
          <%= render  partial: "notifications/notification", collection: @notifications, locals: {unread_notifs: @unread_notifs} %>
        </ul>
      <% else %>
        <p>You have no notifications!</p>
      <% end %>
    </div>
  </div>
</div>
